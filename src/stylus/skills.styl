#skill
	display none
	height 100px
	width 500px
	position absolute
	top 50%
	left 50%
	margin -130px 0 0 -250px
 
	p
		font-size 15px
		margin 40px 0 0 0
		text-align center
		font-weight lighter
		font-variant normal
		font-family "Lucida Grande", Tahoma
		letter-spacing 4px
		line-height 23px
		color #737373
		padding-bottom 20px
 
	ul
		text-align center
 
	li
		display inline-block
		padding 4px 6px
 
		a
			color #FFF
			background #FF0000
			border 1px solid #FF0000
			&:hover
				text-decoration underline
		h2, a
			line-height 10px
			opacity 0.7
			display inline-block
			width auto
			padding 6px 10px
			margin-top 10px
			background #000
			color #FFF
			border 1px solid #000
			font-size 10px
			font-weight lighter
			font-variant normal
			font-family "Lucida Grande", Tahoma
			letter-spacing 0.15em
			-moz-border-radius 13px
			border-radius 13px
			text-decoration none